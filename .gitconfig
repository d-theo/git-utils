[alias]
	logfull = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all
  recommit = commit --amend --no-edit
  st = status
[color "status"]
        added = green
        changed = 33
        untracked = yellow
[merge]
        tool = meld
[diff]
        tool = meld
[push]
        default = current
[pull]
        rebase = true
